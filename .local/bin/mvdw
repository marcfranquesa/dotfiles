#!/bin/sh

nfiles=$1

if [ -z "$nfiles" ]; then
  nfiles=1
fi

count=$( ls -A "$XDG_DOWNLOAD_DIR" | wc -l | tr -d '[:space:]' )

if [ "$count" -lt "$nfiles" ]; then
    echo "Only $count files found in $XDG_DOWNLOAD_DIR."
    exit 1
fi

ls -tr "$XDG_DOWNLOAD_DIR" | tail -"$nfiles" | while IFS= read -r file; do
  mv "$XDG_DOWNLOAD_DIR/$file" .
  echo "$file"
done
