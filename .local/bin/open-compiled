#!/bin/sh

# back-end script that opens a compiled file

file="${1}"
ext="${file##*.}"
dir=$(dirname "$file")
base="${file%.*}"

md_open() {
    eval setsid -f zathura "${base}.pdf" >/dev/null 2>&1
}

tex_open() {
    args=""

    # synctex
    if [ -n "${1}" ]; then
        line="${1}"
        column="${2:-1}"
        args="--synctex-forward=${line}:${column}:${file} ${args}"
    fi

    [ -f "${base}.pdf" ] || base="main"

    eval setsid -f zathura "${args}""${base}.pdf" >/dev/null 2>&1
}

case "${ext}" in
    md) md_open ;;
    tex) tex_open "${2}" "${3}" ;;
esac
